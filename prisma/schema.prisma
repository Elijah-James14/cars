generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String    @map("hashed_password")
  sessions       Session[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  requires2FA  Boolean  @default(true)
  user         User     @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Classified {
  id             Int              @id @default(autoincrement())
  views          Int              @default(0)
  slug           String           @unique
  vrm            String?
  title          String?
  description    String?
  year           Int
  odoReading     Int              @default(0) @map("odo_reading")
  doors          Int              @default(2)
  seats          Int              @default(5)
  price          Int              @default(0)
  makeId         Int              @map("make_id")
  make           Make             @relation(fields: [makeId], references: [id])
  modelId        Int              @map("model_id")
  model          Model            @relation(fields: [modelId], references: [id])
  modelVariantId Int              @map("model_variant_id")
  modelVariant   ModelVariant?    @relation(fields: [modelVariantId], references: [id])
  transmission   Transmission     @default(AUTOMATIC)
  status         ClassifiedStatus @default(DRAFT)
  color          Color            @default(BLACK)
  petrol         FuelType         @default(PETROL)
  bodyType       BodyType         @default(SEDAN) @map("body_type")
  odoUnit        OdoUnit          @default(MILES) @map("odo_unit")
  currency       CurrencyCode     @default(GBP)
  images         Image[]
  customers      Customer[]
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  @@index([makeId, modelId], name: "index_make_model")
  @@index([price], name: "idex_price")
  @@index([status], name: "index_status")
  @@map("classifieds")
}

model Make {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  image        String
  models       Model[]
  classsifieds Classified[]
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  @@map("makes")
}

model Model {
  id            Int            @id @default(autoincrement())
  name          String
  makeId        Int            @map("make_id")
  make          Make           @relation(fields: [makeId], references: [id], onDelete: Cascade)
  modelVariants ModelVariant[]
  classifieds   Classified[]
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@unique([makeId, name])
  @@map("models")
}

model ModelVariant {
  id          Int          @id @default(autoincrement())
  name        String
  modelId     Int          @map("model_id")
  model       Model        @relation(fields: [modelId], references: [id], onDelete: Cascade)
  classifieds Classified[]
  yearStart   Int
  yearEnd     Int
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  @@unique([modelId, name])
  @@map("model_variants")
}

model Image {
  id           Int        @id @default(autoincrement())
  alt          String
  src          String
  classifiedId Int        @map("classified_id")
  classified   Classified @relation(fields: [classifiedId], references: [id], onDelete: Cascade)
  blurhash     String
  isMain       Boolean    @default(false) @map("is_main")

  @@map("images")
}

model Customer {
  id            Int                 @id @default(autoincrement())
  firstName     String              @map("first_name")
  lastName      String              @map("last_name")
  email         String
  mobile        String?
  bookingDate   DateTime?
  termsAccepted Boolean             @default(false) @map("terms_accepted")
  status        CustomerStatus      @default(INTERESTED)
  classifiedId  Int?                @map("classified_id")
  classified    Classified?         @relation(fields: [classifiedId], references: [id], onDelete: Cascade)
  lifecycle     CustomerLifecycle[]
  createdAt     DateTime            @default(now()) @map("created_at")
  updatedAt     DateTime            @updatedAt @map("updated_at")
}

model CustomerLifecycle {
  id         Int            @id @default(autoincrement())
  customerId Int            @map("customer_id")
  customer   Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)
  oldStatus  CustomerStatus
  newStatus  CustomerStatus
  createdAt  DateTime       @default(now()) @map("created_at")
  updatedAt  DateTime       @updatedAt @map("updated_at")

  @@unique([customerId, oldStatus])
  @@map("customer_lifecycle")
}

model PageView {
  id           Int      @id @default(autoincrement())
  path         String
  viewedAt     DateTime @default(now()) @map("viewed_at")
  ipAddress    String?
  userAgent    String?
  referrer     String?
  classifiedId Int?

  @@unique([path, viewedAt])
  @@map("page_view")
}

enum CustomerStatus {
  INTERESTED
  SUBSCRIBER
  CONTACTED
  PURCHASED
  COLD
}

enum CurrencyCode {
  GBP
  USD
  EUR
}

enum ClassifiedStatus {
  LIVE
  DRAFT
  SOLD
}

enum OdoUnit {
  MILES
  KILOMETERS
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum Color {
  BLACK
  BLUE
  BROWN
  GOLD
  GREEN
  GREY
  ORANGE
  PINK
  PURPLE
  RED
  SILVER
  WHITE
  YELLOW
}

enum BodyType {
  SEDAN
  HATCHBACK
  COUPE
  CONVERTIBLE
  WAGON
  FASTBACK
  SUV
  CROSSOVER
  COMPACT_SUV
  FULL_SIZE_SUV
  PICKUP_TRUCK
  VAN
  MINIVAN
  SUPERCAR
  ROADSTER
  MUSCLE_CAR
  OFF_ROAD
}
